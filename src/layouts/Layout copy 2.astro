---
// src/layouts/MainLayout.astro
import Footer from "../components/Footer.astro";
import Header from "../components/Header.astro";
import "../styles/global.css";
import { getLangFromUrl } from "../i18n/utils.js";

const lang = getLangFromUrl(Astro.url);

const {
  title,
  description = "Official website of Yifang Group",
  image,
} = Astro.props;

// Logika class font berdasarkan bahasa
const fontClass = lang === "zh" ? "font-chinese" : "";

const currentPath = Astro.url.pathname;

const getAlternatePath = (targetLang) => {
  return currentPath.replace(/^\/[^\/]+/, `/${targetLang}`);
};
---

<!doctype html>
<html lang={lang} class={fontClass}>
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width" />
    <meta name="description" content={description} />

    <meta property="og:title" content={title} />
    <meta property="og:description" content={description} />
    <meta property="og:image" content={image} />

    <link rel="icon" type="image/svg+xml" href="/favicon.ico" />
    <meta name="generator" content={Astro.generator} />

    <link rel="preconnect" href="https://fonts.googleapis.com" />
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin />
    <link
      href="https://fonts.googleapis.com/css2?family=Noto+Sans+SC:wght@400;500;700&display=swap"
      rel="stylesheet"
    />

    <link rel="alternate" hreflang="en" href={getAlternatePath("en")} />
    <link rel="alternate" hreflang="zh" href={getAlternatePath("zh")} />
    <link rel="alternate" hreflang="x-default" href="/en/" />

    <title>{title} | Yifang</title>
  </head>
  <body class="min-h-screen">
    <Header />
    <main>
      <slot />
    </main>
    <Footer />
  </body>
</html>

<style is:global>
  /* Hanya merubah font-family jika class .font-chinese aktif (saat lang="zh") */
  .font-chinese {
    font-family: "Noto Sans SC", sans-serif !important;
  }

  /* Memastikan font fallback tetap rapi */
  .font-chinese * {
    font-family: inherit;
  }
</style>
