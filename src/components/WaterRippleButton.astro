---
interface Props {
  bgColor?: string;
  textColor?: string;
}

const { bgColor = "bg-yfred", textColor = "text-white" } = Astro.props;
---

<style>
  /* Ripple effect */
  .ripple {
    position: absolute;
    border-radius: 50%;
    width: 100px;
    height: 100px;
    background-color: rgba(255, 255, 255, 0.3);
    transform: scale(0);
    animation: ripple-animation 4.5s infinite;
    pointer-events: none;
    left: 50%;
    top: 50%;
    transform-origin: center;
  }

  @keyframes ripple-animation {
    0% {
      transform: scale(0);
      opacity: 0.6;
    }
    50% {
      opacity: 0.4;
    }
    100% {
      transform: scale(4);
      opacity: 0;
    }
  }
</style>

<button
  class={`relative overflow-hidden px-6 py-3 ${bgColor} ${textColor} font-semibold rounded-md`}
>
  <slot>Click Me</slot>
  <!-- Ripple otomatis terus menerus -->
  <span class="ripple" style="animation-delay: 0s;"></span>
  <span class="ripple" style="animation-delay: 0.5s;"></span>
  <span class="ripple" style="animation-delay: 1s;"></span>
</button>
