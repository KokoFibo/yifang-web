---
import { getEntry } from "astro:content";
import { getLangFromUrl } from "../../i18n/utils.js";

const lang = getLangFromUrl(Astro.url);
const entry = await getEntry("achievement", lang);
const { data } = entry;
---

<section
  class="bg-section relative flex items-center justify-center mt-10 lg:mt-24 p-6 lg:p-12 overflow-hidden"
>
  <div class="w-full max-w-7xl mx-auto">
    <div
      class="flex flex-col lg:flex-row gap-10 lg:gap-16 items-center lg:items-start"
    >
      <div
        id="achieve-image"
        class="flex items-center justify-center w-full lg:w-1/2 relative"
      >
        <div
          class="absolute w-64 h-64 bg-primary/5 rounded-full blur-3xl -z-10 animate-pulse"
        >
        </div>

        <img
          src="/images/Logo-7th.png"
          alt="Logo-7th"
          class="logo-7th w-4/5 sm:w-2/3 lg:w-full h-auto max-h-75 md:max-h-125 object-contain drop-shadow-2xl"
          loading="lazy"
        />
      </div>

      <div id="achieve-content" class="flex flex-col gap-6 w-full lg:w-1/2">
        <div class="space-y-3">
          <h5
            class="reveal-text text-primary font-bold tracking-widest uppercase text-[10px] sm:text-xs md:text-sm"
          >
            {data.main.subtitle}
          </h5>

          <h2
            class="reveal-text text-2xl sm:text-3xl md:text-4xl lg:text-5xl font-bold leading-tight text-slate-900"
          >
            {data.main.title}
          </h2>
        </div>

        <p class="reveal-text text-yfgrey text-base md:text-lg leading-relaxed">
          {data.main.description}
        </p>

        <div class="flex flex-col gap-8 mt-4">
          <div
            class="achieve-item flex flex-col sm:flex-row gap-5 items-start group cursor-default"
          >
            <div
              class="icon-box w-16 h-16 sm:w-20 sm:h-20 bg-white shadow-md rounded-2xl flex items-center justify-center shrink-0 border border-slate-100 group-hover:border-primary/30 group-hover:shadow-lg transition-all duration-300"
            >
              <img
                src="/images/icons/new-ideas-in-process.png"
                alt="icon"
                class="h-8 sm:h-10 object-contain group-hover:scale-110 transition-transform duration-300"
              />
            </div>
            <div class="space-y-1">
              <h3
                class="font-bold text-lg sm:text-xl text-slate-800 group-hover:text-primary transition-colors duration-300"
              >
                {data.creative.title}
              </h3>
              <p class="text-yfgrey text-sm sm:text-base leading-relaxed">
                {data.creative.description}
              </p>
            </div>
          </div>

          <div
            class="achieve-item flex flex-col sm:flex-row gap-5 items-start group cursor-default"
          >
            <div
              class="icon-box w-16 h-16 sm:w-20 sm:h-20 bg-white shadow-md rounded-2xl flex items-center justify-center shrink-0 border border-slate-100 group-hover:border-primary/30 group-hover:shadow-lg transition-all duration-300"
            >
              <img
                src="/images/icons/assembly.png"
                alt="icon"
                class="h-8 sm:h-10 object-contain group-hover:scale-110 transition-transform duration-300"
              />
            </div>
            <div class="space-y-1">
              <h3
                class="font-bold text-lg sm:text-xl text-slate-800 group-hover:text-primary transition-colors duration-300"
              >
                {data.assembly.title}
              </h3>
              <p class="text-yfgrey text-sm sm:text-base leading-relaxed">
                {data.assembly.description}
              </p>
            </div>
          </div>

          <div
            class="achieve-item flex flex-col sm:flex-row gap-5 items-start group cursor-default"
          >
            <div
              class="icon-box w-16 h-16 sm:w-20 sm:h-20 bg-white shadow-md rounded-2xl flex items-center justify-center shrink-0 border border-slate-100 group-hover:border-primary/30 group-hover:shadow-lg transition-all duration-300"
            >
              <img
                src="/images/icons/operator.png"
                alt="icon"
                class="h-8 sm:h-10 object-contain group-hover:scale-110 transition-transform duration-300"
              />
            </div>
            <div class="space-y-1">
              <h3
                class="font-bold text-lg sm:text-xl text-slate-800 group-hover:text-primary transition-colors duration-300"
              >
                {data.consultation.title}
              </h3>
              <p class="text-yfgrey text-sm sm:text-base leading-relaxed">
                {data.consultation.description}
              </p>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>
</section>

<script>
  import { gsap } from "gsap";
  import { ScrollTrigger } from "gsap/ScrollTrigger";

  gsap.registerPlugin(ScrollTrigger);

  function initAchievementAnim() {
    // 1. Animasi Floating untuk Logo (berjalan terus menerus)
    gsap.to(".logo-7th", {
      y: 15,
      duration: 2.5,
      ease: "sine.inOut",
      repeat: -1,
      yoyo: true,
    });

    // 2. Timeline Animasi saat Scroll
    const tl = gsap.timeline({
      scrollTrigger: {
        trigger: ".bg-section",
        start: "top 75%",
        toggleActions: "play none none none",
      },
    });

    tl.from("#achieve-image", {
      x: -60,
      opacity: 0,
      duration: 1.2,
      ease: "power3.out",
    })
      .from(
        ".reveal-text",
        {
          y: 30,
          opacity: 0,
          duration: 0.8,
          stagger: 0.15,
          ease: "power2.out",
        },
        "-=0.8"
      )
      .from(
        ".achieve-item",
        {
          x: 30,
          opacity: 0,
          duration: 0.7,
          stagger: 0.2,
          ease: "power2.out",
        },
        "-=0.5"
      );
  }

  // Jalankan inisialisasi
  initAchievementAnim();
  document.addEventListener("astro:after-swap", initAchievementAnim);
</script>

<style>
  .bg-section::before {
    content: "";
    position: absolute;
    inset: 0;
    z-index: 0;
    background-image:
      url("/images/bg_frame3.png"),
      linear-gradient(
        to top right,
        rgba(255, 255, 255, 0.7),
        rgba(255, 255, 255, 1)
      );
    background-repeat: repeat, no-repeat;
    background-size:
      20px 20px,
      cover;
    opacity: 0.8;
  }

  .bg-section > * {
    position: relative;
    z-index: 1;
  }

  /* Efek halus untuk transisi warna dan bayangan */
  .icon-box {
    will-change: transform, box-shadow;
  }
</style>
