---
import { getEntry } from "astro:content";
import { getLangFromUrl } from "../../i18n/utils.js";

const lang = getLangFromUrl(Astro.url);
const entry = await getEntry("certification", lang);
const { data } = entry;
---

<section
  id="iso-section"
  class="bg-section relative flex items-center justify-center mt-10 lg:mt-24 p-6 lg:p-12 overflow-hidden"
>
  <div class="w-full max-w-7xl mx-auto">
    <div class="flex flex-col gap-6 text-center">
      <div class="header-reveal space-y-3">
        <h5
          class="text-primary font-bold tracking-widest uppercase text-[10px] sm:text-xs md:text-sm"
        >
          {data.main.subtitle}
        </h5>
        <h2
          class="text-2xl sm:text-3xl md:text-4xl lg:text-5xl font-bold leading-tight text-slate-900"
        >
          {data.main.title}
        </h2>
        <p
          class="text-yfgrey text-sm sm:text-base lg:text-lg max-w-3xl mx-auto leading-relaxed"
        >
          {data.main.description}
        </p>
      </div>

      <div
        class="grid grid-cols-2 md:grid-cols-3 xl:grid-cols-6 gap-8 lg:gap-10 mt-12"
      >
        {
          [
            {
              img: "45001.png",
              code: "45001 : 2018",
              desc: data.iso45001?.description,
            },
            {
              img: "14001.png",
              code: "14001 : 2015",
              desc: data.iso14001?.description,
            },
            {
              img: "27001.png",
              code: "27001 : 2015",
              desc: data.iso27001?.description,
            },
            {
              img: "9001.png",
              code: "9001 : 2015",
              desc: data.iso9001?.description,
            },
            {
              img: "20000.png",
              code: "20000 : 2018",
              desc: data.iso20000?.description,
            },
            {
              img: "Apreciation.png",
              code: "APPRECIATION",
              // desc: "Occupational Safety and Health Management System",
              desc: data.appreciation?.description,
              customTitle: "CERTIFICATE OF",
            },
          ].map((iso) => (
            <div class="iso-card flex flex-col items-center text-center group cursor-default">
              <div class="iso-img-wrapper mb-4 p-2 transition-transform duration-500 group-hover:scale-110">
                <img
                  src={`/images/ISO/${iso.img}`}
                  alt={`ISO ${iso.code}`}
                  class="iso-img w-24 sm:w-28 md:w-32 h-auto object-contain drop-shadow-md group-hover:drop-shadow-xl transition-all"
                />
              </div>
              <div class="space-y-1">
                <h3 class="font-bold text-[11px] sm:text-xs md:text-sm text-slate-800 uppercase tracking-tighter">
                  {iso.customTitle || "SNI ISO"}
                </h3>
                <h4 class="font-extrabold text-sm md:text-base text-primary leading-none">
                  {iso.code}
                </h4>
                <p class="text-yfgrey text-[10px] sm:text-xs leading-snug mt-2 max-w-37.5 mx-auto">
                  {iso.desc}
                </p>
              </div>
            </div>
          ))
        }
      </div>
    </div>
  </div>
</section>

<script>
  import { gsap } from "gsap";
  import { ScrollTrigger } from "gsap/ScrollTrigger";

  gsap.registerPlugin(ScrollTrigger);

  function initIsoAnim() {
    const tl = gsap.timeline({
      scrollTrigger: {
        trigger: "#iso-section",
        start: "top 80%",
        toggleActions: "play none none none",
      },
    });

    // Animate Header
    tl.from(".header-reveal > *", {
      y: 30,
      opacity: 0,
      duration: 0.8,
      stagger: 0.2,
      ease: "power2.out",
    })
      // Animate Cards Staggered
      .from(
        ".iso-card",
        {
          y: 40,
          opacity: 0,
          duration: 0.6,
          stagger: 0.1,
          ease: "power2.out",
        },
        "-=0.4"
      );
  }

  // Run on Load
  initIsoAnim();
  // Run on Astro View Transitions
  document.addEventListener("astro:after-swap", initIsoAnim);
</script>
