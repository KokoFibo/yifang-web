---
import Button from "../Button.astro";
const { head, company, link, alt } = Astro.props;
---

<div
  class="card-item group flex-none
         w-[85%] /* Mobile: 85% lebar agar kartu sebelah terlihat sedikit */
         sm:w-[calc(50%-12px)] /* Tablet: 2 kartu (dikurangi setengah gap) */
         lg:w-[calc(33.333%-16px)] /* Desktop: 3 kartu (dikurangi porsi gap) */
         bg-white rounded-2xl overflow-hidden shadow-md hover:shadow-xl transition-shadow duration-300"
>
  <div class="relative overflow-hidden bg-slate-100">
    <img
      src={link}
      alt={alt}
      class="w-full h-72 md:h-100 object-cover group-hover:scale-105 transition-transform duration-500"
    />
  </div>
  <div class="p-6 flex flex-col gap-3">
    <span class="text-xs uppercase tracking-widest text-primary font-bold">
      {head}
    </span>
    <h2 class="text-base md:text-lg font-bold leading-tight min-h-12">
      {company}
    </h2>
    <Button title="Learn More" />
  </div>
</div>
