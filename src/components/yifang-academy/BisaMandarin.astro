  <div
    id="solution-container"
    class="bg-white rounded-[3rem] shadow-2xl shadow-slate-200/50 p-10 md:p-16 border border-slate-50 relative overflow-hidden"
  >
    <div
      class="absolute top-0 right-0 -translate-y-1/2 translate-x-1/2 w-64 h-64 bg-red-50 rounded-full blur-3xl opacity-50"
    >
