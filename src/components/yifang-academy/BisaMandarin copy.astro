<script>
  import { gsap } from "gsap";
  import { ScrollTrigger } from "gsap/ScrollTrigger";

  // Register plugin
  gsap.registerPlugin(ScrollTrigger);

  // Jalankan animasi setelah DOM siap
  const initAnimation = () => {
    const tl = gsap.timeline({
      scrollTrigger: {
        trigger: "#title",
        start: "top 80%",
      },
    });

    // Animasi Header
    tl.from("#title", {
      y: 50,
      opacity: 0,
      duration: 0.8,
      ease: "power4.out",
    })
      .from(
        ".problem-item",
        {
          y: 20,
          opacity: 0,
          stagger: 0.1,
          duration: 0.5,
          ease: "back.out(1.7)",
        },
        "-=0.4"
      )
      .from("#sub-quote", { opacity: 0, duration: 1 }, "-=0.2");

    // Animasi Solution Box & Cards
    gsap.from("#solution-container", {
      scrollTrigger: {
        trigger: "#solution-container",
        start: "top 75%",
      },
      y: 100,
      opacity: 0,
      duration: 1.2,
      ease: "power3.out",
    });

    gsap.from(".benefit-card", {
      scrollTrigger: {
        trigger: ".benefit-card",
        start: "top 85%",
      },
      y: 40,
      opacity: 0,
      stagger: 0.15,
      duration: 0.8,
      ease: "power2.out",
    });
  };

  initAnimation();
</script>
