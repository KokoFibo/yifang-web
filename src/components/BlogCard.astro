---
// src/components/BlogCard.astro
const { title, description, pubDate, image, href, lang } = Astro.props;

// Format tanggal sesuai bahasa
const dateFormatted = new Date(pubDate).toLocaleDateString(
  lang === "zh" ? "zh-CN" : "en-US",
  {
    year: "numeric",
    month: "long",
    day: "numeric",
  }
);
---

<a
  href={href}
  class="blog-card group flex flex-col h-full overflow-hidden rounded-xl border border-white/10 transition-all duration-500 hover:-translate-y-2"
>
  <div class="relative aspect-[16/10] overflow-hidden">
    <div
      class="absolute inset-0 bg-gradient-to-t from-[var(--color-primary)]/80 to-transparent z-10 opacity-60"
    >
    </div>
    {
      image ? (
        <img
          src={image}
          alt={title}
          class="w-full h-full object-cover transition-transform duration-700 group-hover:scale-110"
        />
      ) : (
        <div class="w-full h-full bg-slate-800 flex items-center justify-center">
          <span class="text-[var(--color-secondary)] opacity-30 text-4xl font-bold italic">
            Yifang
          </span>
        </div>
      )
    }
  </div>

  <div
    class="flex-1 p-6 flex flex-col bg-[var(--color-primary)] border-t border-white/5"
  >
    <span
      class="text-[var(--color-accent)] text-xs font-bold tracking-widest uppercase mb-3"
    >
      {dateFormatted}
    </span>

    <h3
      class="text-xl font-bold text-[var(--color-surface)] mb-3 leading-tight group-hover:text-[var(--color-accent)] transition-colors duration-300"
    >
      {title}
    </h3>

    <p class="text-slate-400 text-sm line-clamp-2 mb-6 flex-1">
      {description}
    </p>

    <div
      class="flex items-center text-[var(--color-accent)] font-semibold text-sm"
    >
      <span class="mr-2">{lang === "zh" ? "阅读更多" : "Read More"}</span>
      <svg
        xmlns="http://www.w3.org/2000/svg"
        class="w-4 h-4 transition-transform duration-300 group-hover:translate-x-2"
        fill="none"
        viewBox="0 0 24 24"
        stroke="currentColor"
      >
        <path
          stroke-linecap="round"
          stroke-linejoin="round"
          stroke-width="2"
          d="M17 8l4 4m0 0l-4 4m4-4H3"></path>
      </svg>
    </div>
  </div>
</a>

<style>
  .blog-card {
    box-shadow: 0 10px 30px -15px rgba(0, 0, 0, 0.5);
  }
  .blog-card:hover {
    box-shadow:
      0 20px 40px -20px rgba(0, 0, 0, 0.7),
      0 0 15px rgba(212, 175, 55, 0.1);
  }
</style>
