---
// src/components/BlogCard.astro
const { title, description, pubDate, image, href, lang, tags } = Astro.props;

// Format tanggal sesuai bahasa
const dateFormatted = new Date(pubDate).toLocaleDateString(
  lang === "zh" ? "zh-CN" : "en-US",
  {
    year: "numeric",
    month: "long",
    day: "numeric",
  }
);
---

<a
  href={href}
  class="blog-card group flex flex-col h-full overflow-hidden rounded-xl border border-slate-200 bg-white transition-all duration-500 hover:-translate-y-2"
>
  <div class="relative aspect-[16/10] overflow-hidden">
    <div
      class="absolute inset-0 bg-gradient-to-t from-black/40 to-transparent z-10 opacity-0 group-hover:opacity-100 transition-opacity duration-500"
    >
    </div>

    {
      image ? (
        <img
          src={image}
          alt={title}
          class="w-full h-full object-cover transition-transform duration-700 group-hover:scale-110"
        />
      ) : (
        <div class="w-full h-full bg-slate-100 flex items-center justify-center">
          <span class="text-slate-300 text-4xl font-bold italic">Yifang</span>
        </div>
      )
    }

    <div class="absolute top-4 left-4 z-20 flex flex-wrap gap-2">
      {
        tags &&
          tags.map((tag) => (
            <span class="bg-[var(--color-primary)] text-white text-[10px] font-bold px-3 py-1 rounded-md uppercase tracking-wider shadow-lg">
              {tag}
            </span>
          ))
      }
    </div>
  </div>

  <div class="flex-1 p-6 flex flex-col bg-white">
    <div class="flex items-center gap-3 mb-3">
      <span
        class="text-[var(--color-primary)] text-xs font-bold tracking-widest uppercase"
      >
        {dateFormatted}
      </span>
    </div>

    <h3
      class="text-xl font-bold text-slate-900 mb-3 leading-tight group-hover:text-[var(--color-primary)] transition-colors duration-300 italic"
    >
      {title}
    </h3>

    <p class="text-slate-600 text-sm line-clamp-2 mb-6 flex-1">
      {description}
    </p>

    <div
      class="flex items-center text-[var(--color-primary)] font-bold text-sm"
    >
      <span class="mr-2 uppercase tracking-tighter"
        >{lang === "zh" ? "阅读更多" : "Read More"}</span
      >
      <svg
        xmlns="http://www.w3.org/2000/svg"
        class="w-4 h-4 transition-transform duration-300 group-hover:translate-x-2"
        fill="none"
        viewBox="0 0 24 24"
        stroke="currentColor"
      >
        <path
          stroke-linecap="round"
          stroke-linejoin="round"
          stroke-width="2"
          d="M17 8l4 4m0 0l-4 4m4-4H3"></path>
      </svg>
    </div>
  </div>
</a>

<style>
  .blog-card {
    /* Shadow lebih lembut untuk tema putih */
    box-shadow: 0 4px 20px -10px rgba(0, 0, 0, 0.1);
  }
  .blog-card:hover {
    box-shadow:
      0 20px 40px -20px rgba(0, 0, 0, 0.15),
      0 0 15px rgba(198, 42, 39, 0.05);
  }
</style>
