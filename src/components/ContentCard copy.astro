---
const {
  subtitle,
  title,
  description,
  imageUrl,
  alt,
  reverse = false,
} = Astro.props;
---

<section class="max-w-7xl flex justify-center items-center">
  <div class="grid grid-cols-1 md:grid-cols-2">
    <div class={reverse ? "order-2 md:order-1" : "order-1"}>
      <img src={imageUrl} alt={alt} />
    </div>

    <div class={reverse ? "order-1 md:order-2" : "order-2"}>
      <h3>{subtitle}</h3>
      <h2>
        {title}
      </h2>
      <p>
        {description}
      </p>
    </div>
  </div>
</section>
