---
// src/pages/[lang]/blogs/[slug].astro
import Layout from "../../../layouts/Layout.astro";
import { getCollection } from "astro:content";

export async function getStaticPaths() {
  const posts = await getCollection("blog");
  return posts.map((post) => {
    const parts = post.id.split("/");
    const lang = parts[0];
    const slug = parts[1].replace(/\.[^/.]+$/, "");
    return {
      params: { lang, slug },
      props: { post },
    };
  });
}

const { post } = Astro.props;
const { Content } = await post.render();

const formattedDate = new Date(post.data.pubDate).toLocaleDateString(
  post.id.startsWith("zh") ? "zh-CN" : "en-US",
  { year: "numeric", month: "long", day: "numeric" }
);
---

<Layout title={post.data.title}>
  <div class="h-24 bg-black w-full fixed top-0 z-40 shadow-md"></div>

  <main class="bg-white min-h-screen pt-40 pb-20 text-slate-900">
    <article class="max-w-4xl mx-auto px-6">
      <header class="mb-12">
        <div class="mb-8">
          <a
            href={`/${post.id.split("/")[0]}/blogs`}
            class="text-[var(--color-primary)] hover:opacity-70 transition-all flex items-center gap-2 font-semibold"
          >
            <svg
              xmlns="http://www.w3.org/2000/svg"
              class="w-4 h-4"
              fill="none"
              viewBox="0 0 24 24"
              stroke="currentColor"
            >
              <path
                stroke-linecap="round"
                stroke-linejoin="round"
                stroke-width="2"
                d="M10 19l-7-7m0 0l7-7m-7 7h18"></path>
            </svg>
            {post.id.startsWith("zh") ? "返回博客" : "Back to Blog"}
          </a>
        </div>

        {
          post.data.tags && (
            <div class="flex flex-wrap gap-2 mb-6">
              {post.data.tags.map((tag) => (
                <span class="text-[10px] font-bold tracking-[0.2em] uppercase px-3 py-1.5 bg-slate-100 text-slate-500 rounded-md border border-slate-200">
                  {tag}
                </span>
              ))}
            </div>
          )
        }

        <h1
          class="text-4xl md:text-6xl font-bold text-slate-900 mb-6 italic leading-tight"
        >
          {post.data.title}
        </h1>

        <div class="flex items-center gap-4 text-slate-500">
          <span class="w-8 h-px bg-[var(--color-primary)]"></span>
          <p class="font-medium tracking-wide uppercase text-sm italic">
            {formattedDate}
          </p>
        </div>
      </header>

      {
        post.data.image && (
          <div class="mb-16 rounded-2xl overflow-hidden shadow-2xl shadow-slate-200 border border-slate-100">
            <img
              src={post.data.image}
              alt={post.data.title}
              class="w-full h-auto object-cover"
            />
          </div>
        )
      }

      <div
        class="prose prose-slate prose-yifang max-w-none
                  prose-headings:text-slate-900
                  prose-headings:italic
                  prose-p:text-slate-700
                  prose-p:text-lg
                  prose-p:leading-relaxed
                  prose-strong:text-[var(--color-primary)]
                  prose-a:text-[var(--color-primary)]
                  prose-a:no-underline hover:prose-a:underline
                  prose-blockquote:border-l-[var(--color-primary)]
                  prose-blockquote:bg-slate-50
                  prose-blockquote:italic"
      >
        <Content />
      </div>
    </article>
  </main>
</Layout>

<style is:global>
  .prose h2 {
    border-bottom: 2px solid rgba(198, 42, 39, 0.1);
    padding-bottom: 0.5rem;
    margin-top: 3rem;
  }
  .prose ul li::marker {
    color: var(--color-primary);
  }
</style>
<script>
  // Menangani semua link di dalam artikel agar terbuka di tab baru
  const articleLinks = document.querySelectorAll(".prose a");
  articleLinks.forEach((link) => {
    // Hanya untuk link eksternal atau semua link di dalam artikel
    link.setAttribute("target", "_blank");
    link.setAttribute("rel", "noopener noreferrer");
  });
</script>
